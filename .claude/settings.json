{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm lint:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(pnpm codegen)",
      "Bash(pnpm vitest run:*)",
      "Bash(pnpm eslint:*)"
    ],
    "deny": []
  },
  "includeCoAuthoredBy": false,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm run lint --fix"
          }
        ]
      }
    ]
  }
}
